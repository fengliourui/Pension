<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="养老"
            android:textColor="@color/black"
            android:textSize="19dp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/grue"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/teibo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="18dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.xuexiang.xui.widget.banner.recycler.BannerLayout
                    android:id="@+id/homepage_banner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    app:bl_autoPlaying="true"
                    app:bl_centerScale="1.3"
                    app:bl_itemSpace="0dp"
                    app:bl_moveSpeed="0.3"
                    app:bl_indicatorGravity="center"
                    app:bl_interval="1500"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/www1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/teib4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#673AB7"
                    app:cardCornerRadius="25dp">
                    <TextView
                        android:id="@+id/ttttt1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="健康"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="健康养生"
                    android:textColor="@color/black"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/www2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/teib5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#2196F3"
                    app:cardCornerRadius="25dp">
                    <TextView
                        android:id="@+id/ttttt2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="音乐"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音乐生活"
                    android:textColor="@color/black"
                    android:textSize="13dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/www3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/teib6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="18dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="#009688"
                    app:cardCornerRadius="25dp">
                    <TextView
                        android:id="@+id/ttttt3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新闻"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:textSize="18dp"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="社会新闻"
                    android:textColor="@color/black"
                    android:textSize="13dp"/>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/loading_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正在加载..."
                android:layout_gravity="center"
                android:visibility="visible" /> <!-- 初始时可见，数据加载后设置为gone或invisible -->

        </FrameLayout>
    </LinearLayout>
</LinearLayout>
